{% extends 'dashboard.html.twig' %}

{% block title %}Module index{% endblock %}

{% block breadcumb %}
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/">Inicio</a>
    </li>
    <li class="breadcrumb-item"><a href="{{ path('program_index') }}"> Programas </a></li>
    <li class="breadcrumb-item"><a href="{{path('program_modules', {'id':program.id} ) }} ">  {{ program.name }}</a> </li>
    </ol>

{% endblock %}

{% block body %}
    <h1>Modulos en {{ program.name }} </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for module in modules %}
            <tr>
                <td>{{ module.name }}</td>
                <td>{{ module.description }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('module_show', {'id': module.id}) }}">Ver</a>
                    <a class="btn btn-info"  href="{{ path('module_courses', {'id': module.id}) }}">Cursos</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('module_new',{'id':program.id}) }}"> <i class="fa fa-plus"></i> Crear Modulo</a>
{% endblock %}
