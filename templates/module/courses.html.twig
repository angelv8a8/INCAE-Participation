{% extends 'dashboard.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <h1>Cursos en {{module}}</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Curso</th>
                <th>Code</th>
                <th>Participantes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.name }}</td>
                <td>{{ course.code }}</td>
                <td>
                    Estudiantes: {{ course.students | length }}
                    <br>
                    Profesores: {{ course.teachers | length }}
                </td>
                <td>
                    <a href="{{ path('course_show', {'id': course.id}) }}">show</a>
                    <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('course_new') }}">Create new</a>
{% endblock %}
